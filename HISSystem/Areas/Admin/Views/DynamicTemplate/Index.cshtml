                type: 'POST',
                url: '/admin/dynamictemplate/addtemplatedetail',
                data: formdata,
                dataType: "json",
                processData: false,
                contentType: false,
                success: function (response) {
                    if (response == true) {
                        toastr.info('Record saved');
                        GetTemplateDetail(values);
                    }
