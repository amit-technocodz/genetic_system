        function GetTemplateDetailFix(type) {
            var fields = type.split('>>');
            var temptype = fields[0];
            var subtemptype = fields[1];
            $.ajax({
                url: '/admin/dynamictemplate/getdynamictemplate?temptype=' + temptype + "&subtemptype=" + subtemptype,
