@model Data.Helpers.PagedData<Data.Models.ClientOrder>


<table class="table table-hover table-bordered table-striped" id="relative-table">
    <thead>
        <tr class="">
            <th>Order No</th>
            <th>Order Date</th>
            <th>Order DueDate</th>
            <th>Doctor</th>
            <th>Patient</th>
            <th>Patient City</th>
            <th>Test Type</th>
            <th>Status</th>
            <th colspan="2">Actions</th>
            @*<th><i class="fa fa-trash" aria-hidden="true"></i> Delete</th>*@
            @*<th><i class="fa fa-paperclip" aria-hidden="true"></i> Attachment</th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Data)
        {
        <tr>
            <td>
                @order.OrderNo
            </td>
            <td>
                @order.OrderDate
            </td>
            <td>
                @order.OrderDueDate
            </td>
            <td>
                @order.Doctor?.EnFirstName @order.Doctor?.EnSecondName @order.Doctor?.EnThirdName
            </td>
            <td>
                @order.User?.EnFirstName @order.User?.EnSecondName @order.User?.EnThirdName
            </td>
            <td>
                @order.User?.PatientPersonalInformation?.City?.Name
            </td>
            <td>
                @order.TemplateID
            </td>
            <td>
                Status
            </td>
            <td colspan="2">
                <button type="button" class="btn btn-xs btn-warning UpdtOrdrBtn" value="@order.ID"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Update</button>
                <button type="button" class="btn btn-xs btn-danger"><i class="fa fa-trash" aria-hidden="true"></i> Delete</button>
                <button type="button" class="btn btn-xs btn-success"><i class="fa fa-paperclip" aria-hidden="true"></i> Attachment</button>
            </td>
            @*<td><button type="button" class="btn btn-xs btn-danger"><i class="fa fa-trash" aria-hidden="true"></i> Delete</button></td>
        <td><button type="button" class="btn btn-xs btn-success"><i class="fa fa-paperclip" aria-hidden="true"></i> Attachment</button></td>*@
            @*<td><button type="button" class="btn btn-xs btn-primary">Log</button></td>*@
        </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="17">
                @for (int i = 1; i <= Model.NumberOfPages; i++)
                {
                    <a class="page-number" href="javascript:void();">@i</a>
                }
            </td>
        </tr>
    </tfoot>
</table>